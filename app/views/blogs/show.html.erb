<p style="color: green"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Body</th>
      <th colspan="4">Actions</th>
    </tr>
  </thead>
  <tbody>
    <%= render @blog %>
  </tbody>
</table>

<div>
  <%= link_to "Edit this blog", edit_blog_path(@blog) %> |
  <%= link_to "Back to blogs", blogs_path %>

  <%= button_to "Destroy this blog", @blog, method: :delete %>
</div>
